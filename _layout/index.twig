{% extends "default.twig" %}

{% block content %}
    {{ content }}

    {% for page in pages %}
        {% if page.type %}
            <article>
                <div class="row-fluid navbar navbar-inverse">
                    <div class="navbar-inner">
                        <h4 class="pull-left">
                            {% if page.type != 'quote' %}
                                <a href="{{ page.location }}">{{ page.title }}</a>
                            {% else %}
                                {{ page.title }}
                            {% endif %}
                            <small>{{ page.date|date(DATE_ATOM) }}</small>
                        </h4>
                    </div>
                </div>

                <div class="row-fluid">
                    {% if page.type == 'quote' or page.type == 'deck' %}
                        <p>{{ page.html }}</p>
                    {% else %}
                        <p>{{ page.summary }}</p>
                    {% endif %}
                </div>

                <hr/>

                {% if page.tags %}
                    <ul class="tags">
                        {% for tag in page.tags %}
                            <li><a href="#" class="label">{{ tag }}</a></li>
                        {%  endfor %}
                    </ul>
                {% endif %}
            </article>
        {% endif %}
    {% endfor %}
{% endblock %}
